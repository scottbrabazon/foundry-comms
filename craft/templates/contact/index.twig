		<!-- Enquiry Form -->

		{% if craft.request.getParam("message") != "thankyou" %}

		<section id="enquiry-form" class="centered">
			
			<form method="post" action="amForms/submissions/saveSubmission" accept-charset="UTF-8">

	
			    {{ getCsrfInput() }}

				{# This should always be here! #}
			    <input type="hidden" name="action" value="amForms/submissions/saveSubmission">

			    {# Insert your form's handle. #}
			    <input type="hidden" name="handle" value="contact">

			    {# Optional: Redirect URL. Will redirect to current page by default. #}
			    <input type="hidden" name="redirect" value="{{ craft.request.getSegment(1) }}?message=thankyou">

			    {# Optional: Anti-spam protection. #}
			    {{ craft.amForms.displayAntispam() }}


			    {# Place the HTML of your fields here #}

			    <h1>Make an enquiry</h1>
				<div class="rule">
					<img src="/img/rule.png" alt="Rule" />
				</div>
				<p>Send us a message. Fill in your details and we'll be in touch as soon as possible.</p>

				<fieldset>

				<div class="form-field">
					<label class="required" for="fields-fullName">Name<sup>*</sup></label>
					<input id="fields-fullName" name="fields[fullName]" placeholder="Name" type="text" required="required" autocomplete="nope" />
				</div>

				<div class="form-field">
					<label class="required" for="fields-companyPosition">Position<sup>*</sup></label>
					<input id="fields-companyPosition" name="fields[companyPosition]" placeholder="Position" type="text" required="required" autocomplete="nope" />
				</div>

				<div class="form-field">
					<label class="required" for="fields-company">Company<sup>*</sup></label>
					<input id="fields-company" name="fields[company]" placeholder="Company" type="text" required="required" autocomplete="nope" />
				</div>

				<div class="form-field">
					<label class="required" for="fields-emailAddress">Email<sup>*</sup></label>
					<input id="fields-emailAddress" name="fields[emailAddress]" placeholder="Email address" type="text" required="required" autocomplete="nope" />
				</div>

				<div class="form-field">
					<label class="required" for="fields-telephoneNumber">Telephone<sup>*</sup></label>
					<input id="fields-telephoneNumber" name="fields[telephoneNumber]" placeholder="Telephone number" type="text" required="required" autocomplete="nope" />
				</div>

				<div class="form-field">
					<label class="required" for="fields-message">Message<sup>*</sup></label>
					<textarea id="fields-message" name="fields[message]" placeholder="Please enter a message" required="required"></textarea>
				</div>

				<div class="hvr-bounce-to-right button-next">
					<input name="submit" value="Send" type="submit" />
				</div>

				</fieldset>
			    
			</form>


		</section>

		
		{% else %}

		<section id="thank-you">
			<div class="centered">
				<h1>Thank you for your enquiry<br>We will be in touch very soon</h1>
				<div class="rule">
					<img src="/img/rule.png" alt="Rule" />
				</div>
			</div>
		</section>
    	

    	{% endif %}


		<!-- End Enquiry Form -->

		<!-- Careers -->

		{% for paragraph in entry.generalParagraph %}
		<section id="careers" class="main-container">
			<div class="centered">
				<h1>{{ paragraph.paragraphHeadline }}</h1>
				<div class="rule">
					<img src="/img/rule.png" alt="Rule" />
				</div>
				{{ paragraph.paragraphCopy }}
			</div>
		</section>
		{% endfor %}

		<!-- End Careers -->

{% endblock main %}