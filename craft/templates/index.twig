{% set title = "Design, advertising and digital agency in Manchester" %}

{% extends "_layouts/site" %}

{% block main %}

<div class="gif-masthead-450px">
	<img src="/img/video-optimised-450px.gif" alt="sparks" />
</div>
<div class="gif-masthead-750px">
	<img src="/img/video-optimised-750px.gif" alt="sparks" />
</div>
<div class="gif-masthead-1090px">
	<img src="/img/video-optimised-1090px.gif" alt="sparks" />
</div>
<div class="video-masthead">
	<video autoplay muted loop><source src="/img/video-optimised.mp4" type="video/mp4"></video>
</div>

<main class="main-container">

	<!-- Masthead -->

	{% set entry = craft.entries.section('Homepage').first() %}

	<header id="homepage-masthead">
		<ul class="rslides">
			{% for headline in entry.bannerHeadlines %}
			<li>
				<div class="slide flexbox">
					<div class="rule">
						<img src="/img/rule.png" alt="Rule" />
					</div>
					<h1>{{ headline.bannerHeadline }}</h1>
					<a href="/work">
						<div class="hvr-bounce-to-right button-next flexbox">
							<p>View our work</p>
						</div>
					</a>
				</div>	
			</li>
			{% endfor %}
		</ul>
	</header>

	<!-- End Masthead -->

	<!-- Intro Copy -->

	<div id="homepage-intro-copy">
		<div> 
			<div class="problem-solved centered">
				<h2>{{ entry.homeIntroductionTitle }}</h2>
				<div class="rule">
					<img src="/img/rule.png" alt="Rule" />
				</div>

				<p>{{ entry.homeIntroductionFirst }}</p>

				{{ entry.homeIntroductionCopy }}

			</div>	
			<div class="groupthree flexbox">

				{% for panel in entry.pagePanels %}
				<div class="groupthree-content flexbox">
					<h2>{{ panel.panelTitle }}</h2>
					<div class="rule">
						<img src="/img/rule.png" alt="Rule" />
					</div>
					<p>{{ panel.panelCopy }}</p>
					<a href="{{ panel.panelLink }}">
						<div class="hvr-bounce-to-right button-next flexbox">
							<p>{{ panel.panelLinkTitle }}</p>
						</div>
					</a>
				</div>

				{% endfor %}

			</div>
		</div>
	</div>

	<!-- End Intro Copy -->

</main>	

